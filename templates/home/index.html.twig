{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="col-sm mt-4">
        <h3 class="title text-primary">
            Listes des produits avec ses nombres de stock:
        </h3>
    </div>
    <hr>
<div class="row">
    {% for produit in produits %}
    <div class="card col-sm-4 m-2 bg-dark" style="width: 18rem;">
        <img src="{{asset('images/produit/' ~produit.image)}}" class="card-img-top mt-1
        " alt="">
        <div class="card-body d mb-1 mt-0">
            <h5 class="card-title">{{produit.nom}}</h5>
            <p class="card-text">{{produit.description}}</p>
            <p class="card-text">Prix: {{produit.prix}}</p>
            <h6 class="card-title">Nombre stock: <strong class=" {{produit.nombre<=10 ? "text-danger" : ""}}"> {{produit.nombre}}</strong></h6>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock %}
